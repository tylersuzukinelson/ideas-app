<!DOCTYPE html>
<html>
  <head>
    <title>IdeaFactory</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="row">
      <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 pull-left">
        <%= link_to 'Ideas', ideas_path %>
        |
        <%= link_to 'New_Idea', new_idea_path %>
      </div>
      <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 pull-right">
        <% if current_user %>
          Logged In As <%= current_user.email %>
          <%= link_to 'Log Out', logout_path %>
        <% else %>
          <%= link_to 'Sign up', signup_path %>
          |
          <%= link_to 'Log In', login_path %>
        <% end %>
      </div>
    </div>

    <% if flash.any? %>
   <hr>
   <% if flash[:notice] %>
     <div class="alert alert-success"><%= flash[:notice] %></div>
   <% elsif flash[:alert] %>
     <div class="alert alert-danger"><%= flash[:alert] %></div>
   <% end %>
   <hr>
  <% end %>
  <%= yield %>
  </body>
</html>
