<div class="container">
  <div class="jumbotron" style="background: white;">
    <% @ideas.each do |idea| %>
      <div class="row">
        <div class="col-lg-12">
          <h3><a data-toggle ="collapse", data-target="#description_<%= idea.id %>" ><%= idea.title %></a></h3>
          <div id="description_<%= idea.id %>" class="collapse">
            <p><%= idea.description %></p>
          </div>
          </div>
          <div class="col-lg-8 pull-left">
            <div class="col-lg-2">
            <%= link_to 'By User', idea_path(idea) %>
            </div>
            <div class="col-lg-1">
            <button>Join</button>
            </div>
            <div class="col-lg-1">
            <button>Like</button>
            </div>
          </div>
          <div class="col-lg-4 pull-right">
              Members: 5|Likes:6
            </div>
          </div>
        <hr />
      <% end %>
  </div>
</div>
